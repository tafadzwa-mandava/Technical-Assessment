@model TechnicalAssessment.Data.Models.BranchInformation

<h1>New Branch Information</h1>

<form asp-action="Create" method="post" id="addPersonalInformationForm">
    <div class="form-group">
        <label asp-for="BranchName"> Branch Name</label>
        <input asp-for="BranchName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BranchCode">Branch Code</label>
        <input asp-for="BranchCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Province"> Province</label>
        <select asp-for="Province" class="form-control">
            <option selected disabled>-- Branch Province --</option>
            <option>Eastern Cape</option>
            <option>Free State</option>
            <option>Gauteng</option>
            <option>KwaZulu-Natal</option>
            <option>Limpopo</option>
            <option>Mpumalanga</option>
            <option>Northen Cape</option>
            <option>North West</option>
            <option>Western Cape</option>
        </select>
    </div>

    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
        Submit Branch Information
    </button>
    <input asp-for="Id" type="hidden" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>